<%= form_with model: @reservation do |form| %>
    <% @reservation.errors.full_messages.each do |error| %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= error %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% end %>
    <div class="mb-3">
      <%= form.label :room_id, class: 'form-label' %>
      <%= form.collection_select :room_id, Room.all.order(room_name: :asc), :id, :room_name, {}, { class: 'form-select' } %>
    </div>

    <div class="mb-3">
      <%= form.label :entry_date, class: 'form-label' %>
      <br>
      <%= form.date_select :entry_date %>
    </div>

    <div class="mb-3">
      <%= form.label :departure_date, class: 'form-label' %>
      <br>
      <%= form.date_select :departure_date %>
    </div>

    <div class="mb-3">
      <%= form.label :customer_name, class: 'form-label' %>
      <%= form.text_field :customer_name, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= form.label :customer_email, class: 'form-label' %>
      <%= form.email_field :customer_email, class: 'form-control' %>
    </div>

    <%= form.submit @reservation.persisted? ? t('.update_reservation') : t('.create_reservation'), class: 'btn btn-primary' %>
<% end %>