<%= form_with(model: room) do |form| %>
  <% @room.errors.full_messages.each do |error| %>
      <div>
        <%= error %>
      </div>
  <% end %>

  <div>
    <%= form.label :room_name %>
    <%= form.text_field :room_name %>
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :price %>
    <%= form.text_field :price %>
  </div>

  <div>
    <%= form.label :currency %>
    <%= form.text_field :currency %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
